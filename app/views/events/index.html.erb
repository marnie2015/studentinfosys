<div class="container-fluid">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1">
			<p id="notice"><%= notice %></p>
			<h1>Events / Information
				<a href="/events/new" class="btn btn-primary pull-right">
				<span class="glyphicon glyphicon-user"></span> Add Event / Information
				</a>
			</h1>
			<table class="table table-bordered table-striped">
				<thead>
					<tr>
						<th>Description</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @events.each do |event| %>
					<tr>
						<td><%= event.description %></td>
						<td><%= link_to edit_event_path(event), :class => "btn btn-sm btn-primary" do %>
							Edit
							<% end %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>