<div class="container-fluid">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1">
			<p id="notice"><%= notice %></p>
			<h1>Events / Information
				<% if session[:user]["access"] == 1 %>
				<a href="/events/new" class="btn btn-primary pull-right">
					<span class="glyphicon glyphicon-user"></span> Add Event / Information
				</a>
				<% end %>
			</h1>
			<table class="table table-bordered table-striped">
				<thead>
					<tr>
						<th>Description</th>
						<% if session[:user]["access"] == 1 %><th></th><% end %>
					</tr>
				</thead>
				<tbody>
					<% @events.each do |event| %>
					<tr>
						<td><%= event.description %></td>
						<% if session[:user]["access"] == 1 %>
						<td><%= link_to edit_event_path(event), :class => "btn btn-sm btn-primary" do %>
							Edit
							<% end %>
						</td>
						<% end %>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>