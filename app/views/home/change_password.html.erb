<div class="container-fluid"><div class="row"><div class="col-sm-4 col-sm-offset-4">
<% if notice %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>
<h1 class="page-header">Change Password
<a class="btn btn-primary pull-right" href="/students-main">
    <span class="glyphicon glyphicon-arrow-left"></span> Back</a>
</h1>
<form action="/change-password" id="form_user" action="#" accept-charset="UTF-8" method="post">
  <div class="form-group">
    <label for="user_user_name">Current Password</label>
    <input class="form-control" type="password" name="user_pass_current" id="user_pass_current" />
  </div>
  <div class="form-group">
    <label for="user_user_pass">New Password</label>
    <input class="form-control" type="password" name="user[user_pass]" id="user_pass_new" />
  </div>
  <div class="form-group">
    <label for="user_user_pass">Confirm Password</label>
    <input class="form-control" type="password" name="user[user_pass]" id="user_pass_confirm" />
  </div>
  
  <button type="button" id="btn_submit" class="btn btn-default">Submit</button>
</form>
</div></div></div>
<script>
  $(document).ready(function() {
    $("#btn_submit").click(function() {
        var userpass_new = $("#user_pass_new").val();
        var userpass_confirm = $("#user_pass_confirm").val();

        if(userpass_new == userpass_confirm) {
            $("#form_user").submit();
        }
        else {
          alert("Password did not match!");
        }
    })
  });
</script>