<div class="container-fluid">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1">
			<p id="notice"><%= notice %></p>
			<h1>Users
				<a href="/users/new" class="btn btn-primary pull-right">
					<span class="glyphicon glyphicon-user"></span> Add User
				</a>
			</h1>
			<table class="table table-bordered table-striped">
				<thead>
					<tr>
						<th>Username</th>
						<th>Access</th>
						<th>Status</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td><%= user.user_name %></td>
						<td><%= "Admin" if user.access == 1 %>
							<%= "Payroll" if user.access == 2 %>
						</td>
						<td><%= user.status %></td>
						 <td class="text-center">
							<%= link_to edit_user_path(user), :class => "btn btn-primary btn-sm" do %>
							<span class="glyphicon glyphicon-pencil"></span> Edit
							<% end %>
						</td>
						<td class="hidden"><%= link_to 'Edit', edit_user_path(user) %></td>
						<td class="hidden"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>