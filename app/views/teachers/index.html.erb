<div class="container-fluid">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1">
			<% if notice %>
				<div class="alert alert-success"><%= notice %></div>
			<% end %>
			<h1>Teachers
				<a href="/teachers/new" class="btn btn-primary pull-right">
				<span class="glyphicon glyphicon-user"></span> Add Teacher
				</a>
			</h1>
			<table class="table table-bordered table-striped">
				<thead>
					<tr>
						<th>First name</th>
						<th>Last name</th>
						<th>Position</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @teachers.each do |teacher| %>
					<tr>
						<td><%= teacher.first_name %></td>
						<td><%= teacher.last_name %></td>
						<td><%= teacher.position.description %></td>
						<td>
                <%= link_to edit_teacher_path(teacher), :class => "btn btn-sm btn-primary" do %>
							    Edit
							  <% end %>
            </td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>