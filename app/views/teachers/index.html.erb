<div class="container-fluid">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1">
			<p id="notice"><%= notice %></p>
			<h1>Teachers
				<a href="/teachers/new" class="btn btn-primary pull-right">
				<span class="glyphicon glyphicon-user"></span> Add Teacher
				</a>
			</h1>
			<table class="table table-bordered table-striped">
				<thead>
					<tr>
						<th>First name</th>
						<th>Last name</th>
						<th>Position</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<% @teachers.each do |teacher| %>
					<tr>
						<td><%= teacher.first_name %></td>
						<td><%= teacher.last_name %></td>
						<td><%= teacher.position %></td>
						<td><%= link_to 'Show', teacher %></td>
						<td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
						<td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>