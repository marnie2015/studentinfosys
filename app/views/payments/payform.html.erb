<style>
    table td:nth-child(2) {
        text-align: right;
    }
    strong {
        text-decoration: underline;
    }
</style>
<div class="container-fluid"><div class="row"><div class="col-sm-10 col-sm-offset-1">
    <div class="panel panel-default">
        <div class="panel-heading">Student's Information</div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-4">
                    First Name: <strong><%= @student.fname %></strong>
                </div>
                <div class="col-sm-4">
                    Middle Name: <strong><%= @student.mname %></strong>
                </div>
                <div class="col-sm-4">
                    Last Name: <strong><%= @student.lname %></strong>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    Grade / Year Level: <strong><%= @student.year_level %></strong>
                </div>
                <div class="col-sm-4">
                    Section: <strong><%= @student.section %></strong>
                </div>
                
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">Billing Information</div>
        <div class="panel-body">
             <!-- start of payment form -->
            <form method="post" action="/pay" id="pay_form">
                <input type="hidden" name="student_id" value="<%= params[:student_id] %>" />
                <input type="hidden" name="txt_tuition_fee" id="txt_tuition_fee" />
                <input type="hidden" name="txt_registration_fee" id="txt_registration_fee" />
                <input type="hidden" name="txt_miscellaneous" id="txt_miscellaneous" />
                <input type="hidden" name="txt_school_service_fee" id="txt_school_service_fee" />
                <input type="hidden" name="txt_aircon_fee" id="txt_aircon_fee" />
                <input type="hidden" name="txt_security_guard_fee" id="txt_security_guard_fee" />
                <input type="hidden" name="txt_janitors_fee" id="txt_janitors_fee" />
                <input type="hidden" name="txt_male_su_grade1to6" id="txt_male_su_grade1to6" />
                <input type="hidden" name="txt_male_su_grade7to10" id="txt_male_su_grade7to10" />
                <input type="hidden" name="txt_male_su_grade11to12" id="txt_male_su_grade11to12" />
                <input type="hidden" name="txt_female_su_grade1to6" id="txt_female_su_grade1to6" />
                <input type="hidden" name="txt_female_su_grade7to10" id="txt_female_su_grade7to10" />
                <input type="hidden" name="txt_female_su_grade11to12" id="txt_female_su_grade11to12" />
                <input type="hidden" name="txt_books_grade1" id="txt_books_grade1" />
                <input type="hidden" name="txt_books_grade2" id="txt_books_grade2" />
                <input type="hidden" name="txt_books_grade3" id="txt_books_grade3" />
                <input type="hidden" name="txt_books_grade4" id="txt_books_grade4" />
                <input type="hidden" name="txt_books_grade5" id="txt_books_grade5" />
                <input type="hidden" name="txt_books_grade6" id="txt_books_grade6" />
                <input type="hidden" name="txt_books_grade7" id="txt_books_grade7" />
                <input type="hidden" name="txt_books_grade8" id="txt_books_grade8" />
                <input type="hidden" name="txt_books_grade9" id="txt_books_grade9" />
                <input type="hidden" name="txt_books_grade10" id="txt_books_grade10" />
                <input type="hidden" name="txt_books_grade11" id="txt_books_grade11" />
                <input type="hidden" name="txt_books_grade12" id="txt_books_grade12" />
                <div class="row" style="margin-bottom: 20px;">
                    <div class="col-sm-4">
                        <label>School Year:</label>
                        <select class="form-control" name="school_year">
                            <% 2018.to_i.downto(2013).each do |t| %>
                                <option><%= (t-1) %>-<%= t %></option>
                            <% end %>
                        </select>
                    </div>
                    <div class="col-sm-4">
                        <label>OR Number:</label>
                        <input type="text" name="or_number" id="or_number" class="form-control" required>
                    </div>
                    <div class="col-sm-2">
                        <button type="button" class="btn btn-primary" id="btn_pay" style="margin-top: 24px;">Pay</button>
                    </div>
                </div>
            </form>
            <!-- end of payment form -->
            <div class="row">
                <div class="col-sm-4">
                    <input type="checkbox" id="tuition_fee" class="pay"> Tuition Fee
                </div>
                <div class="col-sm-4">
                    <input type="checkbox" id="registration_fee" class="pay"> Registration Fee
                </div>
                <div class="col-sm-4">
                    <input type="checkbox" id="miscellaneous" class="pay"> Miscellaneous Fee
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <input type="checkbox" id="janitors_fee" class="pay"> Janitors Fee
                </div>
                <div class="col-sm-4">
                    <input type="checkbox" id="school_service_fee" class="pay"> School Service Fee
                </div>
                <div class="col-sm-4">
                    <input type="checkbox" id="aircon_fee" class="pay"> Aircon Fee
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <input type="checkbox" id="security_guard_fee" class="pay"> Security Guard Fee
                </div>
                <div class="col-sm-8">
                    &nbsp;
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <input type="checkbox" id="male_su_grade1to6" class="pay"> Male School Uniforms Grade 1-6
                </div>
                <div class="col-sm-4">
                    <input type="checkbox" id="male_su_grade7to10" class="pay"> Male School Uniforms Grade 7-10
                </div>
                <div class="col-sm-4">
                    <input type="checkbox" id="male_su_grade11to12" class="pay"> Male School Uniforms Grade 11-12
                </div>
            </div>
             <div class="row">
                <div class="col-sm-4">
                    <input type="checkbox" id="female_su_grade1to6" class="pay"> Female School Uniforms Grade 1-6
                </div>
                <div class="col-sm-4">
                    <input type="checkbox" id="female_su_grade7to10" class="pay"> Female School Uniforms Grade 7-10
                </div>
                 <div class="col-sm-4">
                    <input type="checkbox" id="female_su_grade11to12" class="pay"> Female School Uniforms Grade 11-12
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <input type="checkbox" id="books_grade1" class="pay"> Books Grade 1
                </div>
                <div class="col-sm-4">
                    <input type="checkbox" id="books_grade2" class="pay"> Books Grade 2
                </div>
                <div class="col-sm-4">
                    <input type="checkbox" id="books_grade3" class="pay"> Books Grade 3
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <input type="checkbox" id="books_grade4" class="pay"> Books Grade 4
                </div>
                <div class="col-sm-4">
                    <input type="checkbox" id="books_grade5" class="pay"> Books Grade 5
                </div>
                <div class="col-sm-4">
                    <input type="checkbox" id="books_grade6" class="pay"> Books Grade 6
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <input type="checkbox" id="books_grade7" class="pay"> Books Grade 7
                </div>
                <div class="col-sm-4">
                    <input type="checkbox" id="books_grade8" class="pay"> Books Grade 8
                </div>
                <div class="col-sm-4">
                    <input type="checkbox" id="books_grade9" class="pay"> Books Grade 9
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <input type="checkbox" id="books_grade10" class="pay"> Books Grade 10
                </div>
                <div class="col-sm-4">
                    <input type="checkbox" id="books_grade11" class="pay"> Books Grade 11
                </div>
                <div class="col-sm-4">
                    <input type="checkbox" id="books_grade12" class="pay"> Books Grade 12
                </div>
            </div>
            <div class="row" style="margin-top: 20px;">
                <div class="col-sm-12">
                    <table class="table table-bordered table-striped" id="breakdown">
                        <!-- append js -->
                    </table>
                    <table class="table table-bordered table-striped">
                        <tr class="info">
                            <td><strong>TOTAL</strong></td>
                            <td><strong><span id="span_total">0</span></strong></td>
                        </tr>
                    </table>
               </div>
            </div>
        </div>
    </div>
    <!-- start of previous payment -->
    <div class="hidden panel panel-default">
        <div class="panel-heading">Previous Payment</div>
        <div class="row">
            <div class="col-sm-12">
            <table class="table table-bordered table-striped">
                <tr>
                    <td>Test</td>
                    <td>Test</td>
                </tr>
                <tr>
                    <td>Test</td>
                    <td>Test</td>
                </tr>
                <tr>
                    <td>Test</td>
                    <td>Test</td>
                </tr>
            </table>
            </div>
        </div>
    </div>
    <a class="btn btn-primary" href="/payments">
		<span class="glyphicon glyphicon-arrow-left"></span> Back
	</a>
    <!-- end of previous payment -- >
    <!-- start of modal -->
    <div id="modal_yes_no" class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    Are you sure do you want to proceed?
                </div>
                <div class="modal-footer">
                    <button id="btn_yes" type="button" class="btn btn-primary">Yes</button>
                    <button id="btn_no" type="button" class="btn btn-primary">No</button>
                </div>
            </div>

        </div>
    </div>
    <!--end of modal-->
</div></div></div>