<script>
	window.print();
</script>
<style>
@page {
   size: 350px 6in;
}
tr.border-top td {
  border-top:1pt solid black;
}
</style>
<table width="532px">
	<% 	ctr = 0
	   	total = 0 
	%>
	<% 	@payments.each do |payment| %>
	<% 	ctr += 1 
		total = total + payment.amount
	%>
	<% 	if ctr == 1 %>
	<tr>
		<td width="50%">Payment Date</td>
		<td width="50%"><%= payment.payment_date.strftime("%m/%d/%Y") %></td>
	</tr>
	<tr>
		<td colspan="2">&nbsp;</td>
	</tr>
	<% 	end %>
	<tr>
		<td width="50%"><%= payment.description %></td>
		<td><%= payment.amount %></td>
	</tr>
	<% 	end %>
	<tr class="border-top">
		<td>Total</td>
		<td><%= total %></td>
	</tr>
</table>