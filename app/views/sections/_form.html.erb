<%= form_for(@section) do |f| %>
  <% if @section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% @section.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="panel panel-default">
    <div class="panel-heading"></div>
    <div class="panel-body">
      <div class="form-group">
        <%= f.label :description %><br>
        <%= f.text_field :description, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :year_level_id %><br>
        <%= select("section", "year_level_id", YearLevel.all.collect {|y| [y.description, y.id]}, {}, {:class => "form-control"}) %>
      </div>
      <div class="actions">
        <button class="btn btn-md btn-primary">
          Save
      </button>
      </div>
    </div>
  </div>
<% end %>
