<div class="container-fluid">
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <p id="notice"><%= notice %></p>
            
            <div class="row page-header" style="margin-bottom: 10px;">
              <div class="col-sm-3">
               <label>School Year:</label>
                <select class="form-control">
                  <option>2014-2015</option>
                  <option>2015-2016</option>
                  <option>2016-2017</option>
                </select>
              </div>
              <div class="col-sm-3">
               <label>Grade:</label>
                <%= select("year_level", "id", YearLevel.all.collect {|s| [s.description, s.id]}, {}, :class => "form-control")%>
              </div>
              <div class="col-sm-3">
               <label>Section:</label>
                <%= select("section", "id", Section.all.collect {|s| [s.description, s.id]}, {}, :class => "form-control")%>
              </div>
              <div class="col-sm-2" style="margin-top: 25px;">
                <button class="btn btn-primary">
                    <span class="glyphicon glyphicon-search"></span> Search
                </button>
              </div>
              
            </div>
            <table class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th>School Year</th>
                  <th>Grade / Year Level</th>
                  <th>Section</th>
                  <th>Subject</th>
                  <th>Schedule</th>
                </tr>
              </thead>
            </table>
            <br>
            <div class="row text-center">
              <%= will_paginate @schedules %>
            </div>
        </div>
    </div>
</div>
