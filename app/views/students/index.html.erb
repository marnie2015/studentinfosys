<p id="notice"><%= notice %></p>

<h1>Listing Students</h1>

<table>
  <thead>
    <tr>
      <th>Fname</th>
      <th>Mname</th>
      <th>Lname</th>
      <th>Birthdate</th>
      <th>Gender</th>
      <th>Address 1</th>
      <th>Address 2</th>
      <th>Contact 1</th>
      <th>Contact 2</th>
      <th>User name</th>
      <th>User pass</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.fname %></td>
        <td><%= student.mname %></td>
        <td><%= student.lname %></td>
        <td><%= student.birthdate %></td>
        <td><%= student.gender %></td>
        <td><%= student.address_1 %></td>
        <td><%= student.address_2 %></td>
        <td><%= student.contact_1 %></td>
        <td><%= student.contact_2 %></td>
        <td><%= student.user_name %></td>
        <td><%= student.user_pass %></td>
        <td><%= student.status %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

